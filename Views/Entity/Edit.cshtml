@model downstreem.Dtos.EntityEditDTO

@{
    ViewData["Title"] = "EditEntity";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>EditEntity</h1>

<h4>EntityEditDTO</h4>
<hr />
<div class="row">
